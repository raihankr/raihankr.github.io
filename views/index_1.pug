doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Raihan Khairul Rochman | Portfolio | Home
    link(rel="stylesheet" href="/stylesheets/output.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js")
  body
    // Navbar
    nav(class="fixed content-center px-4 h-10 rounded-2xl border border-black translate-y-4 shadow-soft-md bg-white/70 max-w-160 z-100 centerx backdrop-blur-lg w-9/10")
      p
        b Han &bullet; 
        | Software Enthusiast

    header(class="relative content-center w-screen h-svh")
      h1(class="m-auto w-3/5 [--lw:8px] md:[--lw:10px]")
        //- lw = line width
        .sub Turning
        .relative Ideas
          .x.line(class="absolute top-1/2 right-full w-full border-dotted -translate-x-3 -translate-y-1/2 border-t-(length:--lw)")
        .sub Into
        .relative Digital Reality
          .x.line(class="absolute top-1/2 right-full w-full -translate-x-4 -translate-y-1/2 border-t-(length:--lw)")
            div(class="absolute right-0 -top-1 border-black -translate-y-1/2 border-t-(length:--lw) border-l-(length:--lw) rotate-135 size-10")

      div(class="flex absolute bottom-8 left-8 flex-row gap-2 w-fit h-fit md:top-1/6 md:left-5/6 md:flex-col")
        for i in Array(2)
          .circle(class="size-12 md:size-20 md:-translate-1/2")
      
      .triangle(class="absolute right-8 bottom-8 -translate-x-1/2 -translate-y-1/3 triangle-20 md:left-5/6 md:top-5/6")

      div(class="z-10 *:border-white mix-blend-difference")
        .x.line.md-only(class="absolute w-full top-5/6")
        .x.line.md-only(class="absolute w-full top-1/6")
        .y.line.md-only(class="absolute top-0 h-full left-5/6")
